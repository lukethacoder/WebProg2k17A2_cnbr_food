@model IEnumerable<canberra_food_a2.Models.Rest_reviews>

@{
    ViewData["Title"] = "Index";
}

<section class="row header">
    <div>
        <h2>CANBERRA RESTAURANTS</h2>
        <h1>Customer Reviews</h1>
    </div>
</section>

<p>
    <a asp-action="Create">Create New</a>
    <!-- Create new user or login section-->
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Heading)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Comment)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Restaurant)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Rating)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Heading)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Restaurant)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @{
                    if (User.IsInRole("Manager"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    }
                } |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                @{
                    if (User.IsInRole("Manager"))
                    {
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        <a> | </a>
                        /* <a asp-action="IncreaseAgree" asp-route-id="@item.Id">Agree (+)</a> /* make action */
                    }
                }
            </td>
        </tr>
}
    </tbody>
</table>
