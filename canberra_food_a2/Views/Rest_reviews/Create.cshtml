@model canberra_food_a2.Models.Rest_reviews
@{
    ViewData["Title"] = "Create";
}

<section class="row header">
    <div>
        <h2>CANBERRA RESTAURANTS</h2>
        <h1>Create a Review</h1>
    </div>
</section>

<h1 class="review_heading">Create Review</h1>

<section class="review_page_edit">
    <form asp-action="Create">
        <div class="form-horizontal">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Date" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Date" class="form-control" value="@DateTime.Now" disabled />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Name" class="form-control" Value="@User.Identity.Name" disabled />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Heading" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Heading" class="form-control" placeholder="Enter a Heading" required />
                    <span asp-validation-for="Heading" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Restaurant" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <select asp-for="Restaurant" class="form-control" required>
                        <option value="" selected disabled>Select a Restaurant</option>
                        <option>Italian and Sons</option>
                        <option>Jamie's Italian</option>
                        <option>Chairman & Yip</option>
                        <option>Dickson Asian Noodle House</option>
                        <option>Blu Ginger</option>
                        <option>Jewel of India</option>
                    </select>

                </div>
            </div>
            <div class="form-group">
                <label asp-for="Comment" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <textarea asp-for="Comment" class="form-control" rows="10" placeholder="Enter a Comment" required></textarea>
                    <span asp-validation-for="Comment" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Rating" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Rating" class="form-control" placeholder="0 to 5 Star Rating" />
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    </form>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</section>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
